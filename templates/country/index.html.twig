{% extends 'admin/listing.html.twig' %}

{% block title %}Gestion des menus {% endblock %}

{% block subheader %}Liste des menus{% endblock %}

{% block widgettop %}
    <div class="m-portlet ">
        <div class="m-portlet__body  m-portlet__body--no-padding">
            <div class="row m-row--no-padding m-row--col-separator-xl">
                <div class="col-md-12 col-lg-6">
                    <!--begin::Total Profit-->
                    <div class="m-widget24">
                        <div class="m-widget24__item">
                            <h4 class="m-widget24__title">
                                 Créer un menu
                            </h4><br>
                            <span class="m-widget24__desc">
				            Création d'un menu parent ou enfant
				        </span>
                            <div class="m--space-10"></div>
                            <span class="m-widget24__change">
							<a href="{{ path('create_menu') }}"><button type="button" class="btn m-btn--pill m-btn--air  btn-success m-btn m-btn--custom"><i class="fa fa-plus mr-1"></i> Créer un menu</button></a>
						</span>
                        </div>
                    </div>
                    <!--end::Total Profit-->
                </div>
                <div class="col-md-12 col-lg-6">
                    <!--begin::Total Profit-->
                    <div class="m-widget24">
                        <div class="m-widget24__item">
                            <h4 class="m-widget24__title">
                                 Vérifier les routes
                            </h4><br>
                            <span class="m-widget24__desc">
				            Contrôle la totalité des menus existants
				        </span>
                            <div class="m--space-10"></div>
                            <span class="m-widget24__change">
                            <a href="javascript:;"  class="check-routes-btn"><button type="button" class="btn m-btn--pill m-btn--air btn-warning m-btn--wide"><i class="fa fa-road mr-1"></i> Vérifier les routes</button></a>
						</span>
                        </div>
                    </div>
                    <!--end::Total Profit-->
                </div>
                <div class="col-md-12 col-lg-6 col-xl-3">

                </div>
                <div class="col-md-12 col-lg-6 col-xl-3">

                </div>
            </div>
        </div>
    </div>
{% endblock %}


{% block navitems %}
{% endblock %}


{% block table %}
    <table class="m-datatable" id="listing_menus_table" width="100%">
        <thead>
        <tr>
            <th data-field="id">Nom du pays</th>
            <th data-field="name">Code Du Pays</th>
            <th data-field="parent">Année 1960</th>
            <th data-field="route">Année 2014</th>
            <th data-field="edit">Actions</th>
        </tr>
        </thead>
        <tbody>
        {%  for country in countrys %}
            <tr>
                <td>
                    {{ country.CountryName }}
                </td>
                <td>
                    {{ country.CountryCode }}
                </td>
                <td>
                    {{ country.year1960 }}
                </td>
                <td>
                    {{ country.year2014 }}
                </td>
                <td>
                    <a href="" class="btn btn-info m-btn m-btn--icon m-btn--icon-only">
                        <i class="la la-pencil"></i>
                    </a>
                    <a title="Supprimer" data-href="" class="btn btn-danger m-btn m-btn--icon m-btn--icon-only m--font-light delete_confirmation">
                        <i class="la la-trash"></i>
                    </a>
                </td>
            </tr>
        {%  endfor %}
        </tbody>
    </table>

{% endblock %}

