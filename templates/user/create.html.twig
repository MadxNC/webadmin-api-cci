{% extends 'base.html.twig' %}

{% block title %}Créer un nouvel utilisateur{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-lg-6">
            <div class="m-portlet">
                <div class="m-portlet__head">
                    <div class="m-portlet__head-caption">
                        <div class="m-portlet__head-title">
						<span class="m-portlet__head-icon">
						<i class="la la-info-circle"></i>
						</span>
                            <h3 class="m-portlet__head-text">
                                Information de base
                            </h3>
                        </div>
                    </div>
                </div>
                <!--begin::Form-->
                {{ form_start(form, {'attr': {'class' : 'm-form'} }) }}
                    <div class="m-portlet__body">
                        <div class="m-form__section m-form__section--first">
                            <div class="form-group m-form__group">
                                {{ form_row(form.username, {'attr': {'class' : 'form-control m-input'}} ) }}
                            </div>
                            <div class="form-group m-form__group">
                                {{ form_row(form.password.first,{'attr': {'class' : 'form-control m-input'}}) }}
                            </div>
                            <div class="form-group m-form__group">
                                {{ form_row(form.password.second,{'attr': {'class' : 'form-control m-input'}}) }}
                            </div>
                            <div class="form-group m-form__group">
                                {{ form_row(form.roles, {'attr': {'class' : 'form-control m-select'}}) }}
                            </div>
                            <div class="form-group m-form__group">
                                {{ form_row(form.isActive, {'attr': {'class' : 'form-control m-checkbox'}}) }}
                            </div>
                        </div>
                    </div>
                    <div class="m-portlet__foot m-portlet__foot--fit">
                        <div class="m-form__actions m-form__actions">
                            <div class="row">
                                <div class="col-lg-12">
                                    <button type="submit" class="btn btn-success">Créer le nouvel utilisateur</button>
                                    <a href="{{ path('users') }}"><button type="button" class="btn btn-secondary">Annuler</button></a>
                                </div>
                            </div>
                        </div>
                    </div>
                <!--end::Form-->
            </div>
        </div>
        <div class="col-lg-6">
            <div class="m-portlet">
                <div class="m-portlet__head">
                    <div class="m-portlet__head-caption">
                        <div class="m-portlet__head-title">
						<span class="m-portlet__head-icon">
						<i class="la la-question-circle"></i>
						</span>
                            <h3 class="m-portlet__head-text">
                                Informations supplémentaire
                            </h3>
                        </div>
                    </div>
                </div>
                <!--begin::Form-->
                <div class="m-portlet__body">
                    <div class="m-form__section m-form__section--first">
                        <div class="form-group m-form__group">
                            {{ form_row(form.nom, {'attr': {'class' : 'form-control m-input'}} ) }}
                        </div>
                        <div class="form-group m-form__group">
                            {{ form_row(form.prenom, {'attr': {'class' : 'form-control m-input'}} ) }}
                        </div>
                        <div class="form-group m-form__group">
                            {{ form_row(form.email, {'attr': {'class' : 'form-control m-input'}} ) }}
                        </div>
                        <div class="form-group m-form__group">
                            {{ form_row(form.telephone, {'attr': {'class' : 'form-control m-input'}} ) }}
                        </div>
                        <div class="form-group m-form__group">
                            {{ form_row(form.societe, {'attr': {'class' : 'form-control m-input'}} ) }}
                        </div>
                        <div class="form-group m-form__group">
                            {{ form_row(form.fonction, {'attr': {'class' : 'form-control m-input'}} ) }}
                        </div>
                        <div class="form-group m-form__group">
                            {{ form_row(form.avatar, {'attr': {'class' : 'form-control m-input'}} ) }}
                        </div>

                    </div>
                </div>
                <!--end::Form-->
            </div>
        </div>
        {{ form_end(form) }}
    </div>

{%  endblock %}

